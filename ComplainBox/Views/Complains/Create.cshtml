@model ComplainBox.Models.Complain

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h3>Create Complain</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComplainDate" class="control-label"></label>
                <input asp-for="ComplainDate" class="form-control" />
                <span asp-validation-for="ComplainDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComplainTitle" class="control-label"></label>
                <input asp-for="ComplainTitle" class="form-control" />
                <span asp-validation-for="ComplainTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComplainDescription" class="control-label"></label>
                <textarea asp-for="ComplainDescription" class="form-control"></textarea>
                <span asp-validation-for="ComplainDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ComplainList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
